    "platform": "linux", 
    "rules": [
      {
        "kind": "text", 
        "name": "User ID changed", 
        "alert": false, 
        "critical": false, 
        "active": true, 
        "search_pattern": "userid changed to", 
        "file_path": "/var/log/syslog"
      }, 
      {
        "kind": "text", 
        "name": "Successful root login", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "Accepted password for root from", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Successful password change event", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "password changed for", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Reboot command issued", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "COMMAND\\=\\/sbin\\/reboot", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Potential SYN flooding detected", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "possible SYN flooding on port", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Potential SSH brute-forcing attempted", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "POSSIBLE BREAK\\-INATTEMPT\\!", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Possible SSH brute-forcing attempted", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "Did not receive identification string from", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Possible account brute-forcing attempted", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "Too many authentication failures from", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Password changed", 
        "alert": false, 
        "critical": false, 
        "active": true, 
        "search_pattern": "password changed for", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Multiple failed SUDO attempts", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "3 incorrect password attempts", 
        "file_path": "/var/log/syslog"
      }, 
      {
        "kind": "text", 
        "name": "Invalid User Login Attempt", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "input\\_userauth\\_request\\: invalid user", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Interface entered promiscuous mode", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "entered promiscuous mode", 
        "file_path": "/var/log/kern.log"
      }, 
      {
        "kind": "text", 
        "name": "Group ID changed", 
        "alert": false, 
        "critical": false, 
        "active": true, 
        "search_pattern": "groupid changed to", 
        "file_path": "/var/log/syslog"
      }, 
      {
        "kind": "text", 
        "name": "Failure", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "fail", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Failed root login attempt", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "Failed password for root", 
        "file_path": "/var/log/auth.log"
      }, 
      {
        "kind": "text", 
        "name": "Bad protocol version detected", 
        "alert": true, 
        "critical": true, 
        "active": true, 
        "search_pattern": "Bad protocol version identification", 
        "file_path": "/var/log/auth.log"
      }
